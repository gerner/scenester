            <% if event.tonight? %>
              <%= link_to 'Learn More - Today!', event, :class => "colored-button" %>
            <% else %>
              <%= link_to 'Learn More', event, :class => "button" %>
            <% end %>
            <div class="tags"><%= event.tags %></div>
		</div>
          <div class="divider-large" style="clear:both"></div>
	</div>
