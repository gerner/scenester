<h1>Listing <%= @events.size %> events for today</h1>

<table>
  <tr>
    <th>Image</th>
    <th>Title</th>
    <th>Venue</th>
    <th>Start</th>
    <th>End</th>
    <th>Tags</th>
    <th>Source</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @events.each do |event| %>
  <tr>
    <td><a href="<%= event.image %>"><img src="<%= event.image %>" width=100 height=100 /></a></td>
    <td><a href="<%= event.url %>"><%= event.title %></a></td>
    <td><%= event.venue %></td>
    <td><%= event.start %></td>
    <td><%= event.end %></td>
    <td><%= event.tags %></td>
    <td><%= event.source %></td>
    <td><%= link_to 'Show', event %></td>
    <td><%= link_to 'Edit', edit_event_path(event) %></td>
    <td><%= link_to 'Destroy', event, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

